    <!-- autowire-candidate 属性用于控制 Bean 是否作为候选 Bean 参与自动装配，取值为 true 或 false -->
<!--    <bean id="person" class="com.johann.iocaop.injection.autowire.Person" autowire-candidate="false">-->
<!--        <property name="name" value="johann" />-->
